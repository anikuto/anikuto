<mj-wrapper background-color="#fff" padding-top="0px" padding-bottom="0px">
  <% @works.each do |work| %>
    <%= render "email_notification_mailer/work", work: work, utm_campaign: "related_works_added" do %>
      <mj-text font-weight="800" padding="10px 25px">
        <%= I18n.t("email_notification_mailer.related_works_added.related_works") %>
      </mj-text>

      <mj-text padding-top="0" line-height="22px">
        <% related_works = work.related_works.only_kept.order_by_season %>
        <%= related_works.map { |work| work.local_title }.join(", ") %>
      </mj-text>
    <% end %>
  <% end %>
</mj-wrapper>
