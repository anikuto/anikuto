<% title = t "head.title.db.work_images.show", title: @work.local_title %>
<% set_meta_tags(title: title, reverse: true, prefix: false) %>

<div class="container-fluid py-3">
  <div class="mb-3">
    <div class="mb-1">
      <%= link_to @work.local_title, db_edit_work_path(@work) %>
    </div>
    <h1>
      <%= title %>
    </h1>
  </div>

  <div class="mb-3">
    <%= render "db/works/subnav", work: @work %>
  </div>

  <div class="mb-3 row">
    <div class="col-6">
      <div class="card mb-3">
        <div class="card-body">
          <%= image_tag ann_image_url(@image, :image, size: "280x", ratio: "3:4"), class: "rounded img-thumbnail" %>
        </div>
      </div>
      <%= form_with model: @image, url: db_work_image_detail_path(@work), local: true do |f| %>
        <%= render "application/components/error_panel", resource: @image %>

        <div class="form-group">
          <%= f.label :attachment %>
          <%= f.hidden_field :image, value: @image.cached_image_data %>
          <%= f.file_field :image, class: "form-control-file" %>
        </div>

        <div class="form-group">
          <%= f.label :copyright %>
          <%= f.text_field :copyright, class: "form-control" %>
        </div>

        <%= f.submit t("helpers.submit.create"), class: "btn btn-primary" %>
      <% end %>
    </div>

    <div class="col-6">
      <%= render "sidebar" %>
    </div>
  </div>
</div>
