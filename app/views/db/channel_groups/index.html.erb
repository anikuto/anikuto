<% title = t "head.title.db.channel_groups.index" %>
<% set_meta_tags(title: title, reverse: true, prefix: false) %>

<div class="container-fluid py-3">
  <div class="mb-3">
    <h1>
      <%= title %>
    </h1>

    <% if policy(ChannelGroup).create? %>
      <div class="text-right">
        <%= link_to db_new_channel_group_path, class: "btn btn-outline-primary" do %>
          <%= icon "plus" %>
          <%= t "resources._common.new" %>
        <% end %>
      </div>
    <% end %>
  </div>

  <div class="mb-3">
    <%= render "channel_group_list", channel_groups: @channel_groups %>
  </div>
</div>
