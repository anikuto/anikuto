<%= ann_display_meta_tags %>

<meta http-equiv="x-dns-prefetch-control" content="on">
<meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

<link rel="dns-prefetch" href="//annict.imgix.net">
<link rel="dns-prefetch" href="//kit.fontawesome.com">
<link rel="dns-prefetch" href="//www.googletagmanager.com">

<link rel="shortcut icon" href="/images/favicon.png" type="image/png">
<link rel="canonical" href="<%= "#{request.protocol}#{request.host_with_port}#{request.path}" %>">
<link rel="alternate" hreflang="ja" href="<%= "#{ENV.fetch('ANIKUTO_JP_URL')}#{request.path}" %>">
<link rel="alternate" hreflang="en" href="<%= "#{ENV.fetch('ANIKUTO_URL')}#{request.path}" %>">
<link rel="alternate" hreflang="x-default" href="<%= "#{ENV.fetch('ANIKUTO_URL')}#{request.path}" %>">

<script>
  <%# Set this config to rerender icon when Vue's state changed %>
  window.FontAwesomeConfig = { autoReplaceSvg: 'nest' };
</script>
<script data-mutate-approach="sync" crossorigin="anonymous" src="https://kit.fontawesome.com/f41de4a235.js" defer></script>
<link href="https://fonts.googleapis.com/css2?family=Raleway&display=swap" rel="stylesheet">

<%= yield :vendor_assets %>

<%= csrf_meta_tags %>
<%= csp_meta_tag %>

<%= anikuto_config %>

<%= stylesheet_bundle_tag "web.css", media: "all", "data-turbolinks-track": "reload" %>
<%= javascript_bundle_tag "web.js", defer: "", "data-turbolinks-track": "reload" %>
