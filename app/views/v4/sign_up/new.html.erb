<% title = t "head.title.sign_up.new" %>
<% description = meta_description t("head.meta.description.sign_up.new") %>
<% set_meta_tags(title: title, description: description, og: { description: description }, twitter: { description: description }, reverse: true, prefix: false) %>

<div class="container">
  <div class="justify-content-center row">
    <div class="col-12 col-lg-6 py-5">
      <div class="mb-5 text-center">
        <%= link_to root_path do %>
          <%= image_tag asset_bundle_path("images/logos/color-mizuho.png"), size: "50x61", alt: "Anikuto" %>
        <% end %>
      </div>

      <div class="c-sign-up-form px-3 mb-5">
        <h1 class="my-5 text-center">
          <%= t "messages._common.join_anikuto" %>
        </h1>

        <p class="mb-5 text-center">
          <%= t "messages.sign_up.new.description_html" %>
        </p>

        <%= form_with model: @form, url: sign_up_path, local: true do |f| %>
          <%= render ErrorPanelComponent.new(form: @form) %>

          <% if @recaptcha.enabled? %>
            <%= render RecaptchaInputComponent.new(recaptcha: @recaptcha) %>
          <% end %>

          <div class="form-group">
            <%= f.label :email %>
            <%= f.email_field :email, autofocus: true, class: "form-control", placeholder: "hello@glimmerhq.com", required: true, tabindex: 1 %>
          </div>

          <div class="text-center">
            <%= f.button class: "btn btn-primary", tabindex: 2 do %>
              <%= icon "rocket" %>
              <%= t "verb.send" %>
            <% end %>
          </div>
        <% end %>
      </div>

      <div class="text-center">
        <small>
          <%= t "messages.registrations.new.sign_in_link_html", link: link_to(t("noun.sign_in"), sign_in_path) %>
        </small>
      </div>
    </div>
  </div>
</div>
